# AutoBooker SaaS - Variables d'environnement
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Base URL de l'application
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT Secret pour l'authentification
JWT_SECRET=votre-jwt-secret-super-securise-changez-en-production

# Base de données (Prisma)
DATABASE_URL="postgresql://username:password@localhost:5432/autobooker?schema=public"

# Clés API pour les intégrations
# Google Calendar API
GOOGLE_CLIENT_ID=votre-google-client-id
GOOGLE_CLIENT_SECRET=votre-google-client-secret

# Outlook/Microsoft Graph API
MICROSOFT_CLIENT_ID=votre-microsoft-client-id
MICROSOFT_CLIENT_SECRET=votre-microsoft-client-secret

# SendGrid pour les emails
SENDGRID_API_KEY=votre-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@autobooker.com

# Stripe pour les paiements
STRIPE_PUBLISHABLE_KEY=pk_test_votre-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_votre-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_votre-stripe-webhook-secret

# Twilio pour les SMS
TWILIO_ACCOUNT_SID=votre-twilio-account-sid
TWILIO_AUTH_TOKEN=votre-twilio-auth-token
TWILIO_PHONE_NUMBER=+33123456789

# Configuration email SMTP (alternative à SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app

# Analytics et monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://votre-sentry-dsn@sentry.io/project-id

# Stockage de fichiers (AWS S3 ou Cloudinary)
AWS_ACCESS_KEY_ID=votre-aws-access-key
AWS_SECRET_ACCESS_KEY=votre-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=autobooker-files

# Ou Cloudinary
CLOUDINARY_CLOUD_NAME=votre-cloudinary-cloud
CLOUDINARY_API_KEY=votre-cloudinary-api-key
CLOUDINARY_API_SECRET=votre-cloudinary-api-secret

# Configuration de l'environnement
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Webhooks et intégrations
WEBHOOK_SECRET=votre-webhook-secret-pour-securiser-les-appels

# Limits et quotas
MAX_BOOKINGS_PER_USER=100
MAX_FILE_SIZE_MB=10
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Configuration de cache (Redis)
REDIS_URL=redis://localhost:6379

# Configuration de session
SESSION_SECRET=votre-session-secret-super-securise

# Mode debug et logs
DEBUG=false
LOG_LEVEL=info

# Configuration des notifications push
VAPID_PUBLIC_KEY=votre-vapid-public-key
VAPID_PRIVATE_KEY=votre-vapid-private-key
VAPID_EMAIL=admin@autobooker.com